<!DOCTYPE html>
<html>
<head>
  <title>MERO BLOG </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
   
    <nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Mero Blog</a>
    </div>
  </div>
</nav>
   
   <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-3">
         <div class="well well-sm">
          <div class="row">
          <div class='col-lg-12'>
            <%= link_to 'View all Posts', posts_path, class:'btn btn-default center-block' %><br>
            <%= link_to 'New Post', new_post_path, class:'btn btn-default center-block' %>
          </div>
          </div>
           
           
          

         </div>
        </div>
        <div id="main-content" class="col-xs-9">
          <div class="well well-sm"><%= yield %></div>
        </div>
      </div>
    </div>



</body>
</html>
